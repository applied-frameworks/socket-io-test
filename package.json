{
  "name": "realtime-canvas-backend",
  "version": "1.0.0",
  "description": "Realtime collaborative drawing backend with Socket.IO",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"nodemon server.js\" \"npm run client:dev\"",
    "dev:test": "NODE_ENV=test node server.js",
    "server": "node server.js",
    "server:dev": "nodemon server.js",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:preview": "cd client && npm run preview",
    "install:client": "cd client && npm install",
    "postinstall": "prisma generate",
    "test": "playwright test",
    "test:api": "playwright test tests/auth.spec.js",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:smoke": "playwright test --config=playwright.smoke.config.js",
    "test:smoke:report": "playwright show-report smoke-report",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:status": "prisma migrate status",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:reset": "prisma migrate reset",
    "db:seed": "node prisma/seed.js",
    "db:push": "prisma db push"
  },
  "keywords": [
    "socket.io",
    "realtime",
    "canvas",
    "collaboration"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^8.3.0",
    "@fastify/websocket": "^11.2.0",
    "@prisma/client": "^6.19.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "fastify": "^5.6.2",
    "jsonwebtoken": "^9.0.2",
    "lib0": "^0.2.114",
    "prisma": "^6.19.0",
    "ws": "^8.18.3",
    "y-leveldb": "^0.2.0",
    "y-protocols": "^1.0.6",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.27"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "concurrently": "^9.2.1",
    "http-server": "^14.1.1",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": "22.x"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
