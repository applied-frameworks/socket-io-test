{
  "name": "realtime-canvas-backend",
  "version": "1.0.0",
  "description": "Realtime collaborative drawing backend with Socket.IO",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"nodemon server.js\" \"npm run client:dev\"",
    "server": "node server.js",
    "server:dev": "nodemon server.js",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:preview": "cd client && npm run preview",
    "install:client": "cd client && npm install",
    "test": "playwright test",
    "test:api": "playwright test tests/auth.spec.js",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:reset": "rm -f prisma/dev.db prisma/dev.db-journal && prisma db push",
    "db:seed": "node prisma/seed.js"
  },
  "keywords": [
    "socket.io",
    "realtime",
    "canvas",
    "collaboration"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.19.0",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "concurrently": "^9.2.1",
    "http-server": "^14.1.1",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": "22.x"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
